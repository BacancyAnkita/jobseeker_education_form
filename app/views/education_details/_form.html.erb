<%= form_for @education_detail do |f| %>

  <br/><br/><%= f.label("Highest Qualification :") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.collection_select(:qualification,Education.all,:qualification,:qualification) %><br><br>

  <div class="form-group">
    <%= f.label("Course :") %>
    <%= f.text_field :course,class:"form-control" %>
  </div>
  <div class="form-group">
  <%= f.label("Specialization :") %>
  <%= f.text_field :specialization,class:"form-control"%>
  </div>
<div class="form-group">

  <%= f.label("College / University :") %>
  <%= f.text_field :college,class:"form-control" %>
</div>

<div class="form-group">
  <%= f.label("Course type :") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.radio_button(:course_type,"part time")%>
  <%= f.label(:course_type_part,"Part Time")%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.radio_button(:course_type,"full time")%>
  <%= f.label(:course_type_full,"Full Time")%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.radio_button(:course_type,"correspondence")%>
  <%= f.label(:course_type_correspondent,"Correspondence")%><br>
</div>

<div class="form-group">
  <%= f.label("Passing year :") %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.select :passing_year,1970..2025 %> <br>
</div>

<div class="form-group">
  <%= f.submit "Submit", class:"btn btn-success" %>
</div>
<% end %>
